@model UniversityManagementSystem.Models.Course

@{
    ViewData["Title"] = "Delete";
}

<h2 class="text-info">Are you sure you want to delete this course?</h2>
<form id="delete-course" asp-action="Delete" method="post" enctype="multipart/form-data">
    <div class="p-4 rounded border">
        <div class="form-group row mb-2">
            <div class="col-2">
                <label asp-for="Code"></label>
            </div>
            <div class="col-5">
                <input type="hidden" asp-for="Id"/>
                <input readonly asp-for="Code" class="form-control" />
            </div>

        </div>

        <div class="form-group row mb-2">
            <div class="col-2">
                <label asp-for="Name"></label>
            </div>
            <div class="col-5">
                <input readonly asp-for="Name" class="form-control" />

            </div>

        </div>
        <div class="form-group row mb-2">
            <div class="col-2">
                <label asp-for="Credit"></label>
            </div>
            <div class="col-5">
                <input readonly type="number" asp-for="Credit" class="form-control" />

            </div>

        </div>
        <div class="form-group row mb-2">
            <div class="col-2">
                <label asp-for="Description"></label>
            </div>
            <div class="col-5">
                <textarea readonly asp-for="Description" class="form-control"></textarea>

            </div>

        </div>
        <div class="form-group row mb-2">
            <div class="col-2">
                <label asp-for="DepartmentId"></label>
            </div>
            <div class="col-5">
                <input readonly asp-for="Department.Code" class="form-control" />
            </div>

        </div>
        <div class="form-group row mb-2">
            <div class="col-2">
                <label asp-for="SemesterId"></label>
            </div>
            <div class="col-5">
                <input readonly asp-for="Semester.Name" class="form-control" />
            </div>

        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-danger" value="Delete" />
            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>
    </div>
</form>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
