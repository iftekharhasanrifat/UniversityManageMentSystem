@model UniversityManagementSystem.Models.Course

@{
    ViewData["Title"] = "Create";
}

<h2 class="text-info">Save Course</h2>
<form id="create-course" asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly" class="text-danger">
        </div>

        <div class="form-group row mb-2">
            <div class="col-2">
                <label asp-for="Code"></label>
            </div>
            <div class="col-5">
                <input asp-for="Code" class="form-control" />
                <span asp-validation-for="Code" class="text-danger"></span>

            </div>

        </div>
        @*  <div class="form-group row mb-2">
        <div class="col-2">
        <label>Semesters</label>
        </div>
        <div class="col-5">
        <select asp-items="@ViewBag.Semesters" class="form-select">
        <option value="">-- Select --</option>
        </select>
        </div>

        </div> *@

        <div class="form-group row mb-2">
            <div class="col-2">
                <label asp-for="Name"></label>
            </div>
            <div class="col-5">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
                
            </div>

        </div>
        <div class="form-group row mb-2">
            <div class="col-2">
                <label asp-for="Credit"></label>
            </div>
            <div class="col-5">
                <input type="number" asp-for="Credit" class="form-control" />
                <span asp-validation-for="Credit" class="text-danger"></span>

            </div>

        </div>
        <div class="form-group row mb-2">
            <div class="col-2">
                <label asp-for="Description"></label>
            </div>
            <div class="col-5">
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>

            </div>

        </div>
        <div class="form-group row mb-2">
            <div class="col-2">
                <label asp-for="DepartmentId"></label>
            </div>
            <div class="col-5">
                <select asp-for="DepartmentId" class="form-select" asp-items="@ViewBag.Departments">
                    <option>--Select Department--</option>
                </select>
                <span asp-validation-for="DepartmentId" class="text-danger"></span>

            </div>

        </div>
        <div class="form-group row mb-2">
            <div class="col-2">
                <label asp-for="SemesterId"></label>
            </div>
            <div class="col-5">
                <select asp-for="SemesterId" class="form-select" asp-items="@ViewBag.Semesters">
                    <option>--Select Semester--</option>
                </select>
                <span asp-validation-for="SemesterId" class="text-danger"></span>
                <span class="text-danger">@ViewBag?.message</span>
            </div>

        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Save" />
            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>
    </div>
</form>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
