@model UniversityManagementSystem.Models.Teacher

@{
    ViewData["Title"] = "Delete";
}

<h2 class="text-info">Are you sure you want to delete the teacher?</h2>
<div class="p-4 rounded border">

    <form asp-action="Delete" method="post">
        <div class="form-group row mb-2">
            <div class="col-2">
                <label asp-for="Name"></label>
            </div>
            <div class="col-5">
                <input readonly asp-for="Name" class="form-control" />

            </div>

        </div>
        <div class="form-group row mb-2">
            <div class="col-2">
                <label asp-for="Address"></label>
            </div>
            <div class="col-5">
                <textarea readonly asp-for="Address" class="form-control"></textarea>
            </div>
        </div>

        <div class="form-group row mb-2">
            <div class="col-2">
                <label asp-for="Email"></label>
            </div>
            <div class="col-5">
                <input readonly asp-for="Email" class="form-control" />
            </div>

        </div>
        <div class="form-group row mb-2">
            <div class="col-2">
                <label asp-for="ContactNo"></label>
            </div>
            <div class="col-5">
                <input readonly asp-for="ContactNo" class="form-control" />
            </div>

        </div>

        <div class="form-group row mb-2">
            <div class="col-2">
                <label asp-for="DesignationId"></label>
            </div>
            <div class="col-5">
                <input readonly asp-for="Designation.Name" class="form-control" />
            </div>

        </div>

        <div class="form-group row mb-2">
            <div class="col-2">
                <label asp-for="DepartmentId"></label>
            </div>
            <div class="col-5">
                <input readonly asp-for="Department.Code" class="form-control" />
            </div>

        </div>
        <div class="form-group row mb-2">
            <div class="col-2">
                <label asp-for="CreditsToBeTaken"></label>
            </div>
            <div class="col-5">
                <input readonly asp-for="CreditsToBeTaken" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-danger" value="Delete" />

            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>
    </form>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
